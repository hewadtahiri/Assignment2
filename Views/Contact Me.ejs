<div class="container-fluid justify-content-center">
  <div class="row align-items-start">
    <div class="col text-center title">
      <h1 class="fs-1">Contact Me</h1>
      <p class="fs-5">Fill out the form below.</p>
    </div>
  </div>
  <div class="row align-items-center">
    <div class="col-2">
      <form action="mailto:hewad.tahiri@ontariotechu.net" method="post" enctype="text/plain">
        <div class="mb-3">
          <label for="name" class="form-label">Name</label>
          <input type="text" id="name" name="name" class="form-control" required placeholder="John Doe">
        </div>
        <div class="mb-3">
          <label for="email" class="form-label">Email</label>
          <input type="email" id="email" name="email" class="form-control" required placeholder="name@example.com">
        </div>
        <div class="mb-3">
          <label for="phone" class="form-label">Phone Number</label>
          <input type="tel" id="phone" name="phone" class="form-control" pattern="[0-9]{10}" required placeholder="1234567890">
        </div>
        <div class="mb-3">
          <label for="comments" class="form-label">Message</label>
          <textarea id="comments" name="comments" class="form-control" required placeholder="Enter your message."></textarea>
        </div>
        <div class="d-grid">
          <input type="submit" value="Submit" class="btn btn-primary">
        </div>
      </form>
    </div>
  </div>
</div>